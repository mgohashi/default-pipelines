pipeline {
  parameters {
    string(name: 'PROJECT_NAME', description: 'What is the project name?')
    string(name: 'APP_NAME', description: 'What is the application name?')
  }
  agent any
  stages {
    stage('Aprovar') {
      input {
          message "Você gostaria de aprovar?"
          ok "Sim, gostaria."
          submitter "aprovadores"
          submitterParameter "USERNAME" 
      }
      steps {
        script {
          echo "Olá aprovador ${USERNAME}"
        }
      }
    }
    stage('Implantar') {
      input {
          message "Você gostaria de implantar?"
          ok "Sim, gostaria."
          submitter "deployers"
          submitterParameter "USERNAME" 
      }
      steps {
        script {
          echo "Olá implantador ${USERNAME}"
        }
      }
    }
  }
}